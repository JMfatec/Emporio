generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mesa {
  id        Int      @id @default(autoincrement())
  numero    Int
  pedidos   Pedido[]
}

model Pedido {
  id           Int      @id @default(autoincrement())
  mesa         Mesa     @relation(fields: [mesaId], references: [id])
  mesaId       Int
  produtoNome  String
  quantidade   Int
  valor        Float
}

model User{
  id                        Int        @id @default(autoincrement())
  first_name                String
  last_name                 String
  email                     String     @unique
  password                  String
  is_admin                  Boolean    @default(false)
}